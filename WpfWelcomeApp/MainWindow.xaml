<Window x:Class="WpfWelcomeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWelcomeApp"
        mc:Ignorable="d"
        Title="Welcome WPF Application" Height="450" Width="800" Background="Yellow">
    <StackPanel x:Name="panel">
        <Button FontSize="26">
            <Button.Content>
                <local:User Name="Bob" Age="23" />
            </Button.Content>
        </Button>
        <TextBox x:Name="txtBox"
                 Width="400" 
                 Height="50"/>
        <Button x:Name="btn" 
                Width="200" 
                Height="100"
                Click="Button_Click">
            <Button.Background>
                <SolidColorBrush Color="Aqua" Opacity="1" />
            </Button.Background>
            Click me
        </Button>
    </StackPanel>
</Window>
